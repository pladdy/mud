#action {^H: %1/%2 S: %3/%4 St: %5% He: %6% C/N: %7/%8 [%9%] Hi: %10 E: %11%?$} {
  #var hp {%1};
  #var hp_max {%2};

  #var sp {%3};
  #var sp_max {%4};

  #var gp1 {%5};
  #var gp1_max {100};

  #var gp2 {%6};
  #var gp2_max {100};

  #var enemy {%11};
  #replace {enemy} {%} {};

  #if {$gp1 < 20 && $corpses > 0} {rede};

  #nop Use up excess sps on heat if i'm at full;
  #if {$gp2 > 40 && $sp == $sp_max} {!dissipate};
}
