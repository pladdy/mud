#!/usr/bin/env bash

install_on_linux() {
  echo "Install tintin dependencies"
  if which apt-get > /dev/null 2>&1; then
    sudo apt-get install zlib1g-dev
    sudo apt-get install libpcre++-dev
  elif which yum > /dev/null 2>&1; then
    sudo yum install zlib-devel
    sudo yum install pcre-devel
  fi

  echo "Installing tintin..."

  target="tintin-2.01.3.tar.gz"
  wget http://downloads.sourceforge.net/tintin/${target}
  tar -xzf ${target}
  cd ./tt/src/
  ./configure
  sudo make install
  cd ../..
  rm -rf ${target} tt/

}

install_on_mac() {
  echo "Installing dependecies for mac..."

  if which brew > /dev/null 2>&1; then
    echo "Updating homebrew..."
    brew update
  else
    echo "Installing homebrew..."
    echo "  Visit https://brew.sh/ for more details about Homebrew"
    /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
  fi

  echo "Installing tintin..."
  # brew install tintin
  # brew link --overwrite tintin
  version=2.02.05
  wget https://downloads.sf.net/tintin/tintin-$version.tar.gz
  tar -zxvf tintin-$version.tar.gz
  cd tt/src
  ./configure
  make install
}

os=""

if uname -o > /dev/null 2>&1; then
  os=`uname -o | tr '[:upper:]' '[:lower:]'`
else
  os=`uname -s | tr '[:upper:]' '[:lower:]'`
fi

case "${os}" in
"darwin")
  install_on_mac
  ;;
*)
  install_on_linux
  ;;
esac
