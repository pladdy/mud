#action {^%!{[> ]*}H: %1/%2 %3 S: %4/%5 (%6%%) St: %7/%8 (%9%%) Sn: %10 (%11) E: %12$} {
  #var hp {%1};
  #var hp_max {%2};

  #var sp {%4};
  #var sp_max {%5};
  #var pct_sp %6;

  #var gp1 {%7};
  #var gp1_max {%8};
  #var pct_stamina %9;

  #math {gp2} {200 - %10};
  #var gp2_max 200;

  #var enemy_str {%12};
  #regexp {$enemy_str} {{\d+}} {#var enemy &1} {#var enemy 0};

  attempt_will;
}

#action {^%!{[> ]*}G: %1 C: %2 St:Met: %3 Scw: %4 Sk: [%5]$} {
  #var gxp %1;
  #var corpses %2;

  #var scw %4;

  #var knight_skills %5;
  #regexp {$knight_skills} {P: {\w}} {#var prepare &1};

  #if {$corpses < 1 && "$stepper" == "on"} {stepper off};
  attempt_stamina_recovery;
  attempt_strain_recovery;
  attempt_prepare;
  show_status_bar;
}

