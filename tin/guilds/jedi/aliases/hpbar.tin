#alias attempt_dissipate_attack {
  #local MIN_ENERGY 1000;

  #if {"$dissipating" == "false"
       && $enemy > 0
       && $dissipates > 0
       && $energy > MIN_ENERGY} {
    !focus dissipate on attack;
  };
}

#alias attempt_mindblock {
  #if {"$mindblock" == "no" && $enemy > 0} {
    focus mindblock;
    #var mindblock {yes};
  }
}

#alias check_stepper {
  #local MIN_CONC 15;
  #if {"$stepper" == "on" && $gp1 < $MIN_CONC} {
    stepper off;
  }
}
