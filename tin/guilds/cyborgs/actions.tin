#action {^HP: %1[%2](%3) PWR: %4[%5](%6) HT: [%7%] SI: [%8%]} {
  #var hp {%1};
  #var hp_max {%2};

  #var gp1 {%4};
  #var gp1_max {%5};

  #nop flip the values so it gets red when heat goes up;
  #math gp2 {100 - %7};
  #var gp2_max {100};

  #var gxp {%8};

  #if {$gp1 < 10} {redc};
}

#action {^C: [%1] %2} {
  #regexp {%2} {TARG: %d%%$} {
    #var enemy &1;
  } {
    #var enemy 0;
  };
  show_status_bar;
}
