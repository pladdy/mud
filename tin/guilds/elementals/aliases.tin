#alias use_corpse {
  #if {$hp >= $hp_max && $sp >= $sp_max} {
    !evoke corpse drain;
  } {
    !hp;
    !eat corpse;
    !hp;
  }
}

#alias f10 {
  use_corpse;
  !get all;
}

#alias f12 {
  #if {$map[current_room] == 21864} {!sell all from vortex};
  #loop 2 12 i {!sell all from bag $i};
}

#alias gb {
  !unkeep blast;
  !activate blast;
  !give blast to %0;
}

#alias regen {
  run el_apex;
}
