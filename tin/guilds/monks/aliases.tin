#alias ansi {
  !ansi %1;

  #if {"%1" == "off"} {
    !ansi off;
    mset attack bkblack;
    mset dodge bkblack;
    mset pressure bkblack;
    mset stun bkblack;
    mset palm bkblack;
    mset isn bkblack;
    mset blur bkblack;
    mset crit bkblack;
    mset throw bkblack;
  } {
    !ansi on;
    mset attack white;
    mset dodge hicyan;
    mset pressure hiblack;
    mset stun yellow;
    mset palm himagenta;
    mset isn hiblack;
    mset blur hiblue;
    mset crit hired;
    mset throw brown;
  }
}

#alias attempt_enervate {
  #local MIN_CHI 20;
  #if {$gp1 < ${MIN_CHI}} {en};
}

#alias attempt_focus {
  #nop mind drops to 'clear' at 180;
  #local MIN_MIND 201;
  #local FOCUS_AMOUNT 10;

  #if {$enemy > 0 && $gp2 < $MIN_MIND && $focus > 0} {
    !focus $FOCUS_AMOUNT;
  };
}

#alias attempt_pressure {
  #if {$enemy > 0 && "$pressure" == "off"} {!pressure};
}

#alias commands_after_corpse {
  #var pressure {off};
  !meditate;
}

#alias en {
  !enervate 80;
  #2 {!hands};
}

#alias linkdie_commands {
  !gs;
};

#alias reet {
  !unwrap;
  !study corpse;
  !eat corpse;
}

#alias resp {reet}

#alias resps {#loop 1 5 loop {reet};}

#alias f10 {use_corpse}

#alias f12 {
  #loop 2 12 loop {!sell all from bag $loop};
}

#alias use_corpse {
  !study corpse;
  !eat corpse;
  !hp;
  !get all;
}

#alias wimpy_commands {
  #delay 2 {!meditate;}
}


