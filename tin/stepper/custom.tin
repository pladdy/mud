#alias stepper_pol2 {
  run pol2;
  stepper on;

  #showme <170>Adding to blacklist...;
  #nop avoid guards and warriors (mist);
  blacklist_add black;
  blacklist_add %+ guard;
  blacklist_add shadow;
  blacklist_add warrior;
  blacklist_add %+ demon;
}

#nop Assumes you're in plane of fire;
#alias stepper_pof {
  stepper on;

  #showme <170>Adding to blacklist...;
  blacklist_add large fire elemental;
  blacklist_add huge fire elemental;
  blacklist_add fire dragon;
}
