#action {^%1 dealt the killing blow to %2.} {
  #var {last_kill} {%2};
  #var {last_killer} {%1};

  kcommands_before_corpse;

  #regexp {%1} {%i{$character|$mage_summons|Pogo}} {
    !glance;
    wrap_or_use_corpse;
  };

  !divvy gold;

  kcommands_after_corpse;

  #if { @length{$dtrig} > 0 } {
    #forall {$dtrig} {&0;};
    #var dtrig {};
  };

  #nop Kill Sprints...places to run after a mob dies;

  #switch {"%2"} {
    #case "Cryohydra" {run verbeeg_chief;};
  };
}
