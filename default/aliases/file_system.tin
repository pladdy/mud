#alias read_tin_files {
  #script {init_list} {
    find -E ./%1 -wholename '*.tin' -a ! -regex '.*/init.tin'
  };

  #foreach { $init_list[%*] } {file} {
    #if {@length{$file} > 0} {
      #showme reading $file;
      #read $file;
    };
  };

  #unvar init_list;
}

#alias show {
  #system {
    if [ -f %1.txt ] ; then cat %1.txt ; else ls -al %1 ; fi;
  }
}

#alias lists { show lists/%1 }
#alias notes { show notes/%1 }
